{
  "scripts": {
    "buildServer": "cd _app/server && npm run start",
    "buildClient": "cd _app/client && npm run build",
    "devServer": "cd _app/server && npm run dev",
    "devClient": "cd _app/client && npm run dev",
    "dev": "concurrently \"npm run devServer\" \"npm run devClient\"",
    "start": "npm run buildClient && npm run buildServer",
    "heroku-postbuild": "npm run buildClient",
    "heroku:log": "heroku logs --tail --app ilytat-organizer"
  },
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "googleapis": "^144.0.0",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}
